<input class="mytoggle" type="checkbox" @bind="IsChecked" @attributes="AdditionalAttributes">

@code {
    [Parameter]
    public bool IsChecked { get; set; } // Trạng thái của checkbox

    [Parameter]
    public EventCallback<bool> IsCheckedChanged { get; set; } // Sự kiện thay đổi trạng thái checkbox

    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; } // Thuộc tính bổ sung
}
